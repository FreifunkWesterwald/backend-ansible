Connection=tunnel
Interface={{ item.name }}

Mode=gre
Local={{ ansible_default_ipv4.address }}
Remote={{ item.remote }}

ExecUpPost="/usr/bin/ip link set dev {{ item.name }} mtu 1400; /usr/bin/ip tunnel change {{ item.name }} ttl 64"

IP=static
Address=('{{ item.ip4 }}/31' '{{ ffrl_ip4 }}/32')

IP6=static
Address6=('{{ item.ip6 }}/64')
